doctype html
block vars
html(lang="ja", xmlns:og="http://ogp.me/ns#", xmlns:fb="http://www.facebook.com/2008/fbml", xmlns:mixi="http://mixi-platform.com/ns#")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="fragment", content="!")
		title #{title} | #{sitename}
		link#normalize-css(rel="stylesheet", href="/assets/lib/normalize.css")
		link#open-sans-Oswald-css(rel="stylesheet", href="//fonts.googleapis.com/css?family=Nunito:400,700,300")
		link#font-awesome-css(rel="stylesheet", href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.css")
		link#font-webnist-css(rel="stylesheet", href="/assets/fonts/font-webnist.css")
		if type == 'single'
			link#mak-css(rel="stylesheet", href="/assets/lib/magnific-popup.css")

		link#mak-css(rel="stylesheet", href="/assets/css/mobile.css")

		script(src="/wp-includes/js/jquery/jquery.js?ver=1.11.1")
		script(src="/wp-includes/js/jquery/jquery-migrate.min.js?ver=1.2.1")

		block wp_head

	body(class=type)

		#before_body
			block before_body

		#page.hfeed.site

			block before_page

			include ../includes/_header_mobile

			#content.site-content

				block before_content

				#primary.content-area

					main#main.site-main(role="main")
						block main

					block main_bottom

				aside#secondary.widget-area(role="complementary")

			include ../includes/_footer_mobile

		block wp_footer
			script(src="//cdn.jsdelivr.net/headroomjs/0.5.0/headroom.min.js?ver=v0.5.0")
			script(src="//cdn.jsdelivr.net/headroomjs/0.5.0/jQuery.headroom.min.js?ver=v0.5.0")
			script(src="/assets/lib/imagesloaded.pkgd.min.js")
			script(src="/assets/lib/jquery.bxslider.min.js")
			script(src="/assets/lib/trunk8.js")
			script(src="/assets/lib/slide-pan-pan.js")
			if type == 'single'
				script(src="/assets/lib/jquery.fitvids.js")
				script(src="/assets/lib/jquery.magnific-popup.min.js")
			script(src="/assets/js/mobile.min.js?ver=0.7.2")
			script(src="/assets/js/wpjson.min.js?ver=0.7.2")

